<h2>Create a Post</h2>
<%= form_tag posts_path, method: "post" do %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field<%= ' field_with_errors' if @post.errors[:title].any? %>">
      <%= label_tag "title", "Title" %><br>
      <%= text_field_tag "title", @post.title %><br>
    </div>

  
  <div class="field<%= ' field_with_errors' if @post.errors[:category].any? %>">
    <%= label_tag "category", "Category" %><br>
    <%= text_field_tag "category", @post.category %><br>
  </div>

  <div class="field<%= ' field_with_errors' if @post.errors[:content].any? %>">
    <%= label_tag "content", "Content" %><br>
    <%= text_field_tag "content", @post.content %><br>
  </div>

  <%= submit_tag "Create" %>
<% end %>