<h2>Create an Author</h2>
<% if @author.errors.any? %>
    <ul>
  <% @author.errors.full_messages.each do |error| %>
    <li id= "error_explanation li"><%=error%></li>
    <% end %>
    </ul>
<% end %>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name" %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email" %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number" %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
